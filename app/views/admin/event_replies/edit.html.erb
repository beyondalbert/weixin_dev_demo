<div class="row" style="margin-top: 15px;">
  <div class="col-md-3" id="acount-nav">
    <%= render partial: 'admin/dashboard/nav', locals: {page: 'event_replies'}%>
  </div>
  <div class="col-md-9">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3 class="panel-title"></h3>
      </div>
      <div class="panel-body">
        <%= form_tag "/admin/event_replies/#{@event_reply.id}", method: :put, class: "form-horizontal" do %>
          <div class="form-group">
            <label class="col-sm-2 control-label">事件名字：</label>
            <div class="col-sm-7">
              <%= text_field_tag 'event_reply[name]', @event_reply.name, class: "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">事件key：</label>
            <div class="col-sm-7">
              <%= text_field_tag 'event_reply[key]', @event_reply.key, class: "form-control" %>
            </div>
          </div>
          <div class="form-group">
            <label class="col-sm-2 control-label">事件值：</label>
            <div class="col-sm-7">
              <%= text_area_tag 'event_reply[value]', @event_reply.value, class: "form-control"%>
            </div>
          </div>
          <div class="form-group">
            <div class="col-sm-offset-2 col-sm-7">
              <%= submit_tag '更新', class: "btn btn-default" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
